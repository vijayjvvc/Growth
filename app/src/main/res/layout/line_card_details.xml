<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/symbolSrc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/icon_back"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Nvda"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/symbolSrc"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/symbolName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Nvidia"
            android:gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#8B000000"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/symbol"
            app:layout_constraintStart_toEndOf="@id/symbolSrc"/>

        <TextView
            android:id="@+id/symbolPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="$227.26"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/symbolShare"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="10 shares"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#8B000000"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/symbolPrice"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/symbolPoint"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="45.94"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/symbol"
            app:layout_constraintEnd_toStartOf="@id/symbolPrice"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/symbolPercent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="0.14%"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/symbolPoint"
            app:layout_constraintStart_toEndOf="@id/symbol"
            app:layout_constraintEnd_toStartOf="@id/symbolPrice"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>